function x(a, *args, b = 2, c = 4)
  puts({a, args, b, c})
end

x(1)
 # => {1, {}, 2, 4}
x(1, 3)
 # => {1, {}, 3, 4}
x(1, 1, 3)
 # => {1, {}, 1, 3}
x(1, 1, 3, 5)
 # => {1, {1}, 3, 5}
x(*{1, 1, 3, 5}) # <=> x(1, 1, 3, 5)
 # => {1, {1}, 3, 5}
x(*{1}, 1, *{3, 5}) # <=> x(1, 1, 3, 5)
 # => {1, {1}, 3, 5}
x(1, 1, 2, 3, 5, 8)
 # => {1, {1, 2, 3}, 5, 8}
